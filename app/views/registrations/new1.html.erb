<h1 class="signup-header">Sign Up</h1>

<%= form_with model: @user, url: signup_path, local: true, html: { class: "signup-form" } do |form| %>
  <div class="form-group">
    <%= form.label :email_address, "Email Address", class: "form-label" %><br>
    <%= form.text_field :email_address, autofocus: true, required: true, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :password, "Password", class: "form-label" %><br>
    <%= form.password_field :password, required: true, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %><br>
    <%= form.password_field :password_confirmation, required: true, class: "form-input" %>
  </div>


    <%= form.submit "Sign Up" %>

<% end %>

<%= link_to "Back to Home", root_path, class: "back-link" %>
